@{
    ViewBag.Title = "Forgot Password";
}

<section class="row">
    <div class="col span_12">
        <div class="page-title">Forgot your password?</div>

        <form id="password-reset-email-form" data-bind="submit: submit">
            <fieldset>
                <div class="form-success initially-hidden">An email with a reset link has been sent.</div>
                <ul class="validation-errors initially-hidden"></ul>

                <ol>
                    <li>
                        <input type="email" id="Email" name="Email" class="text-center" maxlength="320" placeholder="Email" data-bind="value: email" tabindex="1" required />
                    </li>
                </ol>

                <div class="submit-wrap">
                    <input type="submit" class="button" value="Send password reset email" tabindex="2" />
                </div>
            </fieldset>
        </form>
    </div>
</section>

@section Scripts {
    <script src="@Url.Content("/JS/Account/forgotpassword.js")"></script>
}